pipeline {
  environment {
    imagename = "shreyarajput22/train"
    registryCredential = 'shreyarajput22'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git([url: 'https://github.com/Shreya2209R/cicd-pipeline-train-schedule-autodeploy', branch: 'master', credentialsId: 'Shreya2209R'])

      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build imagename
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          docker.withRegistry( '', registryCredential ) {
            dockerImage.push("$BUILD_NUMBER")
             dockerImage.push('latest')

          }
        }
      }
    }
  }
}
